    "dialectical",
    "team-of-rivals"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@anthropic-ai/sdk": "^0.32.1",
    "openai": "^4.77.0",
    "zod": "^3.24.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "better-sqlite3": "^9.4.0",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/jest": "^29.5.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/better-sqlite3": "^7.6.8",
    "@types/redis": "^4.0.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "bin": {
    "dialectical-mcp": "./dist/index.js"
